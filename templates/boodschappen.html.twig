{% extends "main.html.twig" %}

{% block header %}

    <script>
        // Vegas functie:

        $(document).ready( function() {

            const mySlides = [
                {src: "assets/img/gerechten/Eggs_and_Veggies.jpg"}
            ] // Einde slide sources
                    
            $("#background-image").vegas({                               // let op de #!!! dit is een ID voor later en hier moet dus een #
                overlay: 'assets/vegas/overlays/01.png',                        // Mogelijk deze weghalen als we die pixel overlay niet willen hebben
                slides: mySlides,
            }) // Einde background-image functie
            

        }) //// eindigd document ready

    </script>

{% endblock %}


{% block content %}

<script>
$(document).ready( function() {
document.getElementById("defaultOpen").click();
}) //// eindigd document ready
</script>


<div class="detail-width m-4-5">
<div class="row custom-shadow background-white"> {# Begin bevenste gedeelte. Hier kan je min-height achter zetten, maar de omschrijving hieronder doet dat ook al#}  


<div class="col-md-12 background-white pb-4 pt-4 pl-5 pr-5">          

    {# Boodschappen header #}
    <div class="row pb-3">                                                                                                                     
        <h1 class="green"> Boodschappen </h1>
    </div>

    {# Boodschappen content #}

    <div class="row" style="height:1000px; overflow-y: scroll;">
            {% for record in data %}
            <div class="row ml-1 mt-4";>
                <div class="col-md-1" 
                    style="background-image: url('assets/img/artikelen/{{record.artikel.afbeelding}}'); background-position: center; background-size: cover; height: 125px; width: 125px"> 
                </div>
                <div class="col-md-5" style="max-width: 500px">
                    <h2 style="color: #6e8722"> {{record.artikel.naam}} </h2>
                    <div> {{record.artikel.omschrijving}} </div>
                </div> {# Einde div md-7 #}
                <div class="col-md-1 green">
                <div class="row" style="border: 1px solid">
                    <div class="" style="text-align:center"> {{record.boodschappen.aantal}} </div>
                </div>
                </div>
                <div class="col-md-2">                                                                                      {# maak hier een md-1-5 aan #}
                    <i class="fa fa-euro-sign fa-lg light-red"></i>  <span class="h8"> {{record.prijzen}}  </span>
                </div>
                <div class="col-md-1">
                    <i class="fa fa-check fa-lg green"> </i>  
                </div>
                <div class="col-md-1">
                    <i class="fa fa-trash fa-lg light-red"></i>
                </div>
            </div> {# Einde row class #}
        {% endfor %}
    </div>

    {# Totaal #}
    <div class="row mt-3 ml-1">
        <div class="col-md-7">
            <h1 class="red"> Totaal </h1>
        </div>
        <div class="col-md-2 ml-4">
            <i class="fa fa-euro-sign fa-lg light-red"></i>  <span class="h8"> {{totaalprijs}} </span>
        </div>
        <div class="col-md-1">
        </div>
        <div class="col-md-1">
            <i class="fa fa-trash fa-lg light-red"></i>
        </div>

    </div>


</div> {# Einde rechter kant #}
</div> {# Einde geheel bovenste gedeelte #}
</div>  {# Sluit de m4-5 van hieroven voor de gerecht details#}

